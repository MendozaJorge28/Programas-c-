numero = int(input("Ingrese un número entero: "))
if numero % 2 == 0:
    print("El número es par")
else:
    print("El número es impar")

cantidad = int(input("¿Cuántos números pares deseas ver? "))
contador = 0
i = 1

while contador < cantidad:
    if i % 2 == 0:
        print(f"Par número {contador + 1}: {i}")
        contador += 1
    i += 1
   